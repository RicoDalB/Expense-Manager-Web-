{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "strict": true,

    /* Node.js Specific */
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "composite": true, // Aggiunto per risolvere il problema segnalato
    "noEmit": false // Modificato da `true` per evitare errori
  },
  "include": ["src"]
}
